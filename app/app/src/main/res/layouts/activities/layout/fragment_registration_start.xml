<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
                name="model"
                type="com.develop.grizzzly.pediatry.viewmodel.registration.RegistrationStartViewModel" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        <TextView
                android:id="@+id/tvEnter"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="23sp"
                android:fontFamily="@font/gothampro"
                android:text="@string/enter_phone"
                android:textColor="@android:color/black"
                android:layout_marginBottom="48dp"
                android:layout_marginStart="48dp"
                android:layout_marginEnd="48dp"
                android:lineSpacingExtra="10dp"
                android:textAlignment="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/tePhone"/>


        <EditText
                android:id="@+id/tePhone"
                android:inputType="phone"
                android:fontFamily="@font/gothampro"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textSize="18sp"
                android:elevation="5dp"
                android:text="@={model.phoneNumber}"
                android:hint="@string/phone_number"
                android:background="@drawable/te_drawable"
                android:layout_marginStart="48dp"
                android:layout_marginEnd="48dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>


        <Button
                android:id="@+id/btnContinue"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginBottom="48dp"
                android:layout_marginStart="48dp"
                android:layout_marginEnd="48dp"
                android:textSize="18sp"
                android:text="@string/next"
                android:textColor="@android:color/white"
                android:fontFamily="@font/gothampro"
                android:background="@drawable/btn_selector"
                android:enabled="@{model.isValid(model.phoneNumber)}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>